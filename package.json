{
  "name": "evrika",
  "version": "1.1.0",
  "description": "Agreements on writing commits and managing project versions in Evrika",
  "main": "src/index.js",
  "scripts": {
    "build:commonjs": "babel src --out-dir lib",
    "lint": "eslint src --ext .js",
    "test": "jest",
    "release": "release-it",
    "coverage": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evrika-company/Evrika_Standarts.git"
  },
  "keywords": [
    "git",
    "semantic version",
    "commitizen"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './src/commitlint_customize/index.js'"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./src/commitizen_customize/index.js"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "header": "Журнал изменений",
        "preset": "angular"
      }
    }
  },
  "author": "Evrika Company, German Shlyaiger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evrika-company/Evrika_Standarts/issues"
  },
  "homepage": "https://github.com/evrika-company/Evrika_Standarts#readme",
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@commitlint/cli": "^17.6.6",
    "@release-it/conventional-changelog": "^5.1.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.5.0",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "release-it": "^15.11.0"
  }
}
