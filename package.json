{
  "name": "evrika",
  "version": "1.0.0",
  "private": false,
  "description": "Agreements on writing commits and managing project versions in Evrika",
  "main": "src/index.js",
  "scripts": {
    "build:commonjs": "babel src --out-dir lib",
    "lint": "eslint src --ext .js",
    "test": "jest",
    "release": "semantic-release",
    "coverage": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evrika-company/Evrika_Standarts.git"
  },
  "keywords": [
    "git",
    "semantic version",
    "commitizen"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "src/commitizen_customize/index.js"
    }
  },
  "author": "Evrika Company, German Shlyaiger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evrika-company/Evrika_Standarts/issues"
  },
  "homepage": "https://github.com/evrika-company/Evrika_Standarts#readme",
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@release-it/conventional-changelog": "^5.1.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.5.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "semantic-release": "^21.0.7"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ]
        }
      ]
    ],
    "git": {
      "assets": [
        "package.json",
        "CHANGELOG.md"
      ],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    },
    "preset": "angular",
    "ci": true,
    "npmPublish": true,
    "changelogFile": "CHANGELOG.md"
  }
}
